.playlist-contaniner{
  width: 220rpx;
  position: relative;
  padding-bottom:  20rpx;
}

.playlist-img{
  width: 220rpx;
  height: 220rpx;
  border-radius: 6rpx;
}

.playlist-playcount{
  font-size: 24rpx;
  color: #fff;
  text-shadow: 1rpx 0 0 rgba(0, 0, 0, 1);
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  padding-left: 28rpx;
  background: url(data:image/svg+xml;base64,) no-repeat 2rpx;
  background-size: 26rpx 26rpx;
}

.playlist-name{
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}